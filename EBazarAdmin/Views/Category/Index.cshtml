@model IEnumerable<EBazarAdmin.Models.Category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!-- Breadcrumbs-->
<ol class="breadcrumb">
    <li class="breadcrumb-item">
        <a href="@Url.Action("index","Admin")">Home</a>
    </li>
    <li class="breadcrumb-item active">Categories</li>
</ol>
<!-- DataTables Example -->
<div class="card mb-3">
    <div class="card-header">
        <i class="fas fa-table"></i>
        Categories
        <a class="btn btn-primary fa fa-plus fa-pull-right" href="@Url.Action("Add","Category")">Add New</a>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.ID)</th>
                        <th>@Html.DisplayNameFor(model => model.Category_Name)</th>
                        <th>@Html.DisplayNameFor(model => model.Category_Image_Path)</th>
                        <th>Image</th>
                        <th>@Html.DisplayNameFor(model => model.Is_Active)</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelitem => item.ID)</td>
                            <td>@Html.DisplayFor(modelitem => item.Category_Name)</td>
                            <td>@Html.DisplayFor(modelitem => item.Category_Image_Path)</td>
                            <td><img src="@Url.Content(item.Category_Image_Path)" height="8%" alt="Alternate Text" /></td>
                            @*<td><img src="@Url.Content(item.Category_Image_Path)" height="20%" width="20%" alt="Alternate Text" /></td>*@
                            <td>@Html.DisplayFor(modelitem => item.Is_Active)</td>
                            <td>
                                <a class="btn btn-sm btn-primary" href="@Url.Action("Edit", "Category", new { id = item.ID })" aria-label="Edit">
                                    <i class="fa fa-edit" aria-hidden="true"></i>
                                </a>
                                <a class="btn btn-sm btn-info " href="@Url.Action("Details", "Category", new { id = item.ID })" aria-label="Details">
                                    <i class="fa fa-info" aria-hidden="true"></i>
                                </a>
                                <a class="btn btn-sm btn-danger " href="@Url.Action("Delete", "Category", new { id = item.ID })" aria-label="Delete">
                                    <i class="fa fa-trash" aria-hidden="true"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="card-footer small text-muted">Updated yesterday at @System.DateTime.Now</div>
</div>
